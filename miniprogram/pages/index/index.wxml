<!--index.wxml-->
<view class="container">
  <!-- 导航栏 -->
  <view class="nav-bar">
    <scroll-view class="nav-scroll" scroll-x enable-flex scroll-with-animation scroll-left="{{scrollLeft}}">
      <view class="nav-items">
        <view class="nav-item {{selectedSite && selectedSite.id === site.id ? 'active' : ''}}"
              wx:for="{{sites}}" 
              wx:key="id"
              wx:for-item="site"
              data-site="{{site}}"
              bindtap="handleSiteSelect">
          <text class="nav-text">{{site.name}}</text>
        </view>
      </view>
    </scroll-view>
    <view class="nav-edit" bindtap="showSiteEdit">
      <text class="edit-icon">⋮</text>
    </view>
  </view>

  <!-- 站点编辑层 -->
  <view class="site-edit-layer {{showSiteEdit ? 'show' : ''}}" bindtap="hideSiteEdit">
    <view class="edit-content" catchtap="stopPropagation">
      <view class="edit-header">
        <text class="edit-title">编辑站点</text>
        <text class="edit-tip">拖动排序，点击置顶</text>
      </view>
      <view class="edit-grid">
        <view class="edit-item {{site.pinned ? 'pinned' : ''}}"
              wx:for="{{sites}}" 
              wx:key="id"
              wx:for-item="site"
              data-site="{{site}}"
              bindtap="togglePinSite"
              bindlongpress="startDrag"
              bindtouchmove="onDragMove"
              bindtouchend="endDrag">
          <text class="edit-icon">{{site.icon}}</text>
          <text class="edit-name">{{site.name}}</text>
          <text class="pin-icon" wx:if="{{site.pinned}}">📌</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 顶部刷新提示 -->
  <view class="refresh-bar" wx:if="{{lastUpdated}}">
    <text class="refresh-text">最后更新: {{formatTime(lastUpdated)}}</text>
    <view class="refresh-btn" bindtap="refreshData" wx:if="{{!isLoading}}">
      <text>刷新</text>
    </view>
  </view>

  <!-- 加载中提示 -->
  <view class="loading" wx:if="{{isLoading}}">
    <view class="loading-spinner"></view>
    <text>加载中...</text>
  </view>

  <!-- 站点网格 -->
  <view class="sites-grid">
    <view class="site-card {{selectedSite && selectedSite.id === site.id ? 'selected' : ''}}"
          wx:for="{{sites}}" 
          wx:key="id"
          wx:for-item="site"
          data-site="{{site}}"
          bindtap="handleSiteSelect">
      <view class="site-icon">{{site.icon}}</view>
      <view class="site-name">{{site.name}}</view>
      <view class="site-count" wx:if="{{groupedHotItems[site.id]}}">
        {{groupedHotItems[site.id].length}}条
      </view>
    </view>
  </view>

  <!-- 热点列表 -->
  <view class="hot-items">
    <block wx:if="{{selectedSite}}">
      <view class="site-header">
        <text class="site-title">{{selectedSite.name}}热搜</text>
      </view>
      <view class="items-list">
        <view class="hot-item" 
              wx:for="{{groupedHotItems[selectedSite.id]}}" 
              wx:key="id"
              data-item="{{item}}"
              bindtap="handleItemClick">
          <view class="item-rank {{item.rank <= 3 ? 'top-' + item.rank : ''}}">{{item.rank}}</view>
          <view class="item-content">
            <view class="item-title">{{item.title}}</view>
            <view class="item-info">
              <text class="item-hot" wx:if="{{item.hot}}">{{item.hot}}</text>
              <text class="item-time">{{formatTime(item.publishTime)}}</text>
            </view>
          </view>
        </view>
      </view>
    </block>
    <view class="no-data" wx:else>
      <text>请选择一个站点查看热搜</text>
    </view>
  </view>
</view> 