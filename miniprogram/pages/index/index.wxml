<!--index.wxml-->
<view class="container">
  <!-- 导航栏 -->
  <view class="nav-bar">
    <view class="nav-sort-btn" bindtap="openNavSort">
      <view class="sort-icon-container">
        <view class="sort-line"></view>
        <view class="sort-line"></view>
        <view class="sort-line"></view>
      </view>
    </view>
    <!-- 推荐Tab固定 -->
    <view class="nav-item {{selectedSite && selectedSite.id === 'recommended' ? 'active' : ''}}"
          data-site="{{recommendedSite}}"
          bindtap="handleSiteSelect">
      <text class="nav-text">推荐</text>
    </view>
    <!-- 其它Tab可横向滚动 -->
    <scroll-view class="nav-scroll" scroll-x enable-flex scroll-with-animation scroll-left="{{scrollLeft}}" show-scrollbar="{{false}}">
      <view class="nav-items">
        <view class="nav-item {{selectedSite && selectedSite.id === site.id ? 'active' : ''}}"
              wx:for="{{otherSites}}" 
              wx:key="id"
              wx:for-item="site"
              data-site="{{site}}"
              bindtap="handleSiteSelect">
          <text class="nav-text">{{site.name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 顶部更新时间 -->
  <view class="update-bar" wx:if="{{lastUpdated}}">
    <text class="update-text">最后更新: {{lastUpdatedFormatted}}</text>
  </view>

  <!-- 加载中提示 -->
  <view class="loading" wx:if="{{isLoading}}">
    <view class="loading-spinner"></view>
    <text>加载中...</text>
  </view>

  <!-- 推荐内容 -->
  <view class="recommended-section" wx:if="{{selectedSite && selectedSite.id === 'recommended' && !isLoading}}">
    <view class="section-header">
      <text class="section-title">🔥 推荐热点</text>
      <view class="collapse-btn" bindtap="toggleAllCollapse">
        <text>{{isAllCollapsed ? '展开' : '收起'}}</text>
      </view>
    </view>
    
    <view class="recommended-sites">
      <view class="site-section {{collapsedSites[site.id] ? 'collapsed' : ''}}" 
            wx:for="{{sites}}" 
            wx:key="id"
            wx:for-item="site"
            wx:if="{{site.id !== 'recommended'}}">
        <view class="site-header" bindtap="toggleSiteCollapse" data-site-id="{{site.id}}">
          <view class="site-info">
            <text class="site-icon">{{site.icon}}</text>
            <text class="site-name">{{site.name}}</text>
          </view>
          <view class="collapse-icon {{collapsedSites[site.id] ? 'collapsed' : ''}}">
            <text>▼</text>
          </view>
        </view>
        <view class="site-content">
          <view class="hot-item" 
                wx:for="{{groupedHotItems[site.id]}}" 
                wx:key="index"
                wx:for-item="item"
                wx:for-index="idx"
                wx:if="{{idx < recommendedItemsPerSite}}"
                data-item="{{item}}"
                bindtap="handleItemClick">
            <view class="item-rank">{{item.rank}}</view>
            <view class="item-content">
              <text class="item-title">{{item.title}}</text>
              <text class="item-hot" wx:if="{{item.hot}}">{{item.hot}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 单个站点内容 -->
  <view class="site-content-section" wx:if="{{selectedSite && selectedSite.id !== 'recommended' && !isLoading}}">
    <view class="site-header-large">
      <text class="site-icon-large">{{selectedSite.icon}}</text>
      <text class="site-name-large">{{selectedSite.name}}</text>
    </view>
    
    <view class="hot-items-list">
      <view class="hot-item-card" 
            wx:for="{{groupedHotItems[selectedSite.id]}}" 
            wx:key="index"
            wx:for-item="item"
            wx:for-index="idx"
            wx:if="{{idx < siteItemsPerSite}}"
            data-item="{{item}}"
            bindtap="handleItemClick">
        <view class="item-rank-large">{{item.rank}}</view>
        <view class="item-content-large">
          <text class="item-title-large">{{item.title}}</text>
          <view class="item-meta">
            <text class="item-hot-large" wx:if="{{item.hot}}">🔥 {{item.hot}}</text>
            <text class="item-time" wx:if="{{item.time}}">{{item.time}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 无数据提示 -->
  <view class="no-data" wx:if="{{!isLoading && (!sites || sites.length === 0)}}">
    <view class="no-data-icon">📭</view>
    <text class="no-data-text">暂无数据</text>
    <view class="retry-btn" bindtap="loadData">
      <text>重试</text>
    </view>
  </view>
</view>