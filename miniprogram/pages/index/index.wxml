            wx:for="{{sites}}" 
            wx:key="id"
            wx:for-item="site"
            wx:if="{{site.id !== 'recommended'}}">
        <view class="site-header" bindtap="toggleSiteCollapse" data-site-id="{{site.id}}">
          <view class="site-info">
            <text class="site-icon">{{site.icon}}</text>
            <text class="site-name">{{site.name}}</text>
          </view>
          <view class="collapse-icon {{collapsedSites[site.id] ? 'collapsed' : ''}}">
