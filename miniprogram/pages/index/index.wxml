      <text class="site-icon-large">{{selectedSite.icon}}</text>
      <text class="site-name-large">{{selectedSite.name}}</text>
    </view>
    
    <view class="hot-items-list">
      <view class="hot-item-card" 
            wx:for="{{groupedHotItems[selectedSite.id]}}" 
            wx:key="index"
            wx:for-item="item"
            wx:for-index="idx"
            wx:if="{{idx < siteItemsPerSite}}"
            data-item="{{item}}"
            bindtap="handleItemClick">
        <view class="item-rank-large">{{item.rank}}</view>
        <view class="item-content-large">
          <text class="item-title-large">{{item.title}}</text>
          <view class="item-meta">
