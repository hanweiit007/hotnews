<!--index.wxml-->
<view class="container">
  <!-- 导航栏 -->
  <view class="nav-bar">
    <view class="nav-sort-btn" bindtap="openNavSort">
      <text class="sort-icon">≡</text>
    </view>
    <scroll-view class="nav-scroll" scroll-x enable-flex scroll-with-animation scroll-left="{{scrollLeft}}">
      <view class="nav-items">
        <view class="nav-item {{selectedSite && selectedSite.id === site.id ? 'active' : ''}}"
              wx:for="{{sites}}" 
              wx:key="id"
              wx:for-item="site"
              data-site="{{site}}"
              bindtap="handleSiteSelect">
          <text class="nav-text">{{site.name}}</text>
        </view>
      </view>
    </scroll-view>
    <view class="nav-edit" bindtap="openNavSort">
      <text class="edit-icon">⋮</text>
    </view>
  </view>

  <!-- 顶部刷新提示 -->
  <view class="refresh-bar" wx:if="{{lastUpdated}}">
    <text class="refresh-text">最后更新: {{formatTime(lastUpdated)}}</text>
    <view class="refresh-btn" bindtap="refreshData" wx:if="{{!isLoading}}">
      <text>刷新</text>
    </view>
  </view>

  <!-- 加载中提示 -->
  <view class="loading" wx:if="{{isLoading}}">
    <view class="loading-spinner"></view>
    <text>加载中...</text>
  </view>

  <!-- 站点网格 -->
  <view class="sites-grid">
    <view class="site-card {{selectedSite && selectedSite.id === site.id ? 'selected' : ''}}"
          wx:for="{{sites}}" 
          wx:key="id"
          wx:for-item="site"
          data-site="{{site}}"
          bindtap="handleSiteSelect">
      <view class="site-icon">{{site.icon}}</view>
      <view class="site-name">{{site.name}}</view>
      <view class="site-count" wx:if="{{groupedHotItems[site.id]}}">
        {{groupedHotItems[site.id].length}}条
      </view>
    </view>
  </view>

  <!-- 热点列表 -->
  <view class="hot-items">
    <block wx:if="{{selectedSite}}">
      <block wx:if="{{selectedSite.id === 'recommended'}}">
        <view class="recommended-list">
          <block wx:for="{{sites}}" wx:key="id" wx:for-item="site">
            <block wx:if="site.id !== 'recommended' && groupedHotItems[site.id]">
              <view class="site-section">
                <view class="site-header" bindtap="toggleSiteCollapse" data-site-id="{{site.id}}" style="display: flex; align-items: center; justify-content: space-between;">
                  <view style="display: flex; align-items: center;">
                    <text class="site-title">{{site.name}}</text>
                    <text class="collapse-icon {{collapsedSites[site.id] ? 'collapsed' : ''}}">▼</text>
                  </view>
                  <!-- 只在第一个 site-section 渲染全部展开/折叠按钮，右侧显示 -->
                  <view wx:if="{{index === 1}}" class="collapse-controls-inline" style="margin-left: auto;">
                    <view class="collapse-btn" bindtap="onAllSitesBtnTap">
                      <text class="collapse-icon {{isAllCollapsed ? 'collapsed' : ''}}">▼</text>
                      <text>{{isAllCollapsed ? '全部展开' : '全部折叠'}}</text>
                    </view>
                  </view>
                </view>
                <view class="items-list {{collapsedSites[site.id] ? 'collapsed' : ''}}">
                  <view class="hot-item" 
                        wx:for="{{groupedHotItems[site.id]}}" 
                        wx:key="id"
                        wx:if="{{index < recommendedItemsPerSite}}"
                        data-item="{{item}}"
                        bindtap="handleItemClick">
                    <view class="item-rank {{item.rank <= 3 ? 'top-' + item.rank : ''}}">{{item.rank}}</view>
                    <view class="item-content">
                      <view class="item-title">{{item.title}}</view>
                      <view class="item-info">
                        <text class="item-hot" wx:if="{{item.hot}}">{{item.hot}}</text>
                        <text class="item-time">{{formatTime(item.publishTime)}}</text>
                      </view>
                    </view>
                  </view>
                </view>
              </view>
            </block>
          </block>
        </view>
      </block>
    </block>
    <view class="no-data" wx:else>
      <text>请选择一个站点查看热搜</text>
    </view>
  </view>
</view> 