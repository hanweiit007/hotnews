/* index.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  z-index: 100;
}

.nav-scroll {
  flex: 1;
  height: 100%;
  white-space: nowrap;
}

.nav-items {
  display: inline-flex;
  height: 100%;
  padding: 0 20rpx;
}

.nav-item {
  position: relative;
  height: 100%;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.nav-text {
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s ease;
}

.nav-item.active .nav-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #E53E3E;
  border-radius: 2rpx;
}

.nav-edit {
  width: 88rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.nav-edit::before {
  content: '';
  position: absolute;
  left: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background: rgba(0,0,0,0.05);
}

.edit-icon {
  font-size: 40rpx;
  color: #666;
}

.nav-sort-btn {
  width: 64rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.sort-icon {
  font-size: 40rpx;
  color: #666;
}

/* 站点编辑层 */
.site-edit-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 200;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.site-edit-layer.show {
  visibility: visible;
  opacity: 1;
}

.edit-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.site-edit-layer.show .edit-content {
  transform: translateY(0);
}

.edit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.edit-tip {
  font-size: 24rpx;
  color: #999;
}

.edit-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.edit-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.edit-item.pinned {
  background: #fff5f5;
}

.edit-item .edit-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.edit-item .edit-name {
  font-size: 24rpx;
  color: #666;
}

.edit-item .pin-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 24rpx;
}

/* 内容区域 */
.content {
  margin-top: 88rpx;
  padding: 20rpx;
}

/* 刷新栏 */
.refresh-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.refresh-text {
  font-size: 24rpx;
  color: #666;
}

.refresh-btn {
  padding: 10rpx 20rpx;
  background: #E53E3E;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #E53E3E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 站点网格 */
.sites-grid {
  display: none;
}

/* 添加推荐模式样式 */
.recommended-list {
  padding: 0 20rpx;
}

.site-section {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.site-section .site-header {
  padding: 20rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #eee;
}

.site-section .site-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.site-section .items-list {
  padding: 0 20rpx;
}

.site-section .hot-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.site-section .hot-item:last-child {
  border-bottom: none;
}

/* 站点网格 */
.site-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.site-card.selected {
  background: #E53E3E;
  color: #fff;
}

.site-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.site-card.selected .site-icon {
  background: rgba(255,255,255,0.2);
}

.site-name {
  font-size: 28rpx;
  font-weight: 500;
}

.site-count {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 20rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.site-card.selected .site-count {
  background: rgba(255,255,255,0.2);
  color: #fff;
}

/* 热点列表 */
.hot-items {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.site-header {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.site-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hot-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-rank {
  width: 40rpx;
  height: 40rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.item-rank.top-1 {
  background: #E53E3E;
  color: #fff;
}

.item-rank.top-2 {
  background: #ED8936;
  color: #fff;
}

.item-rank.top-3 {
  background: #ECC94B;
  color: #fff;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  white-space: normal;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-hot {
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.no-data {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 折叠控制按钮 */
.collapse-controls {
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #eee;
}

.collapse-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.collapse-btn:active {
  background: #f0f0f0;
}

.collapse-icon {
  display: inline-block;
  margin-right: 8rpx;
  transition: transform 0.3s;
}

.collapse-icon.collapsed {
  transform: rotate(-90deg);
}

/* 折叠动画 */
.items-list {
  max-height: 2000rpx;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
}

.items-list.collapsed {
  max-height: 0;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .nav-bar {
    background: #1c1c1e;
    border-bottom-color: rgba(255,255,255,0.1);
  }

  .nav-text {
    color: #999;
  }

  .nav-item.active .nav-text {
    color: #fff;
  }

  .nav-edit::before {
    background: rgba(255,255,255,0.1);
  }

  .edit-icon {
    color: #999;
  }

  .edit-content {
    background: #1c1c1e;
  }

  .edit-title {
    color: #fff;
  }

  .edit-item {
    background: #2c2c2e;
  }

  .edit-item.pinned {
    background: #2c1c1c;
  }

  .edit-item .edit-name {
    color: #999;
  }

  .collapse-controls {
    background: #2c2c2e;
    border-bottom-color: rgba(255,255,255,0.1);
  }

  .collapse-btn {
    background: #3a3a3c;
    color: #fff;
    border-color: rgba(255,255,255,0.2);
  }

  .collapse-btn:active {
    background: #4a4a4c;
  }

  .site-header {
    background: #2c2c2e;
    border-bottom-color: rgba(255,255,255,0.1);
  }

  .site-title {
    color: #fff;
  }
}

.navsort-placeholder {
  width: 100%;
  height: 60rpx;
  background: #e6f7ff;
  border: 2rpx dashed #1890ff;
  border-radius: 16rpx;
  margin: 8rpx 0;
}
.navsort-item.dragging {
  opacity: 0.9;
  box-shadow: 0 8rpx 32rpx rgba(24,144,255,0.18);
  background: #fff;
  pointer-events: none;
  position: fixed;
  z-index: 999;
}

.edit-grid.editing .edit-item:not(.edit-phantom):not(.dragging) {
  background: #e6f7ff;
  box-shadow: 0 4rpx 16rpx rgba(24,144,255,0.12);
  animation: shake 0.5s infinite linear;
  border: 2rpx solid #1890ff;
  pointer-events: auto;
}
.edit-item {
  border: 2rpx solid #1890ff;
  background: #fff;
  border-radius: 12rpx;
  transition: transform 0.25s cubic-bezier(.4,2,.6,1), box-shadow 0.2s, background 0.2s;
}
.edit-item.edit-phantom {
  border: 2rpx dashed #1890ff;
  background: #e6f7ff;
}
.edit-item.dragging {
  opacity: 0.9;
  box-shadow: 0 8rpx 32rpx rgba(24,144,255,0.18);
  background: #fff;
  pointer-events: none;
  position: fixed;
  z-index: 999;
  transition: none;
}
@keyframes shake {
  0% { transform: translateX(0) rotate(-2deg); }
  20% { transform: translateX(-2rpx) rotate(2deg); }
  40% { transform: translateX(2rpx) rotate(-2deg); }
  60% { transform: translateX(-2rpx) rotate(2deg); }
  80% { transform: translateX(2rpx) rotate(-2deg); }
  100% { transform: translateX(0) rotate(0); }
}
.edit-finish-btn {
  font-size: 28rpx;
  color: #1890ff;
  padding: 0 20rpx;
  background: none;
  border: none;
  border-radius: 8rpx;
  font-weight: 500;
  margin-left: 20rpx;
}
.edit-finish-btn:active {
  color: #1677c6;
  background: #e6f7ff;
} 