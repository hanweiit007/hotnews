/* index.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center; /* 确保所有子元素垂直居中 */
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 50%, #f8f9fa 100%);
  box-shadow: 0 2rpx 12rpx rgba(255, 107, 107, 0.08), 0 1rpx 3rpx rgba(0, 0, 0, 0.03);
  position: sticky;
  top: 0;
  z-index: 100;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  height: 80rpx; /* 明确设置导航栏高度 */
}

.nav-sort-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 80rpx;
  position: relative;
  padding: 20rpx;
  background: rgba(255, 107, 107, 0.05);
  border-right: 1rpx solid rgba(255, 107, 107, 0.15);
  transition: all 0.2s ease;
}

.nav-sort-btn:active {
  background: rgba(255, 107, 107, 0.1);
}

.sort-icon-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 28rpx;
  height: 20rpx;
}

.sort-line {
  width: 100%;
  height: 3rpx;
  background: #666;
  border-radius: 2rpx;
  transition: all 0.2s ease;
}

.sort-line:nth-child(2) {
  width: 100%;
}

.sort-line:nth-child(3) {
  width: 100%;
}


.nav-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx; /* 减少内边距，让gap来控制间距 */
  height: 80rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 80rpx; /* 调整最小宽度 */
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0; /* 防止压缩 */
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.08), rgba(255, 142, 142, 0.04));
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 12rpx;
}

.nav-item::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 50%, #ffa8a8 100%);
  border-radius: 2rpx;
  transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 4rpx rgba(255, 107, 107, 0.3);
}

.nav-item.active::before {
  opacity: 1;
}

.nav-item.active::after {
  width: 70%;
}

.nav-item.active .nav-text {
  color: #ff6b6b;
  font-weight: 600;
  transform: scale(1.01);
  text-shadow: 0 1rpx 2rpx rgba(255, 107, 107, 0.1);
}

.nav-text {
  font-size: 30rpx;
  color: #495057;
  white-space: nowrap;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  position: relative;
  z-index: 1;
  letter-spacing: 0.5rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  height: 100%;
  min-width: max-content; /* 确保文字不被压缩 */
}

.nav-scroll {
  flex: 1;
  height: 80rpx;
  background: transparent;
  position: relative;
}

/* 隐藏滚动条的多种方式兼容 */
.nav-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.nav-scroll {
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

/* 取消右侧渐变遮罩以免遮挡最后一个站点 */

.nav-items {
  display: flex;
  height: 100%;
  align-items: center;
  padding: 0 20rpx; /* 左右边距相同 */
  gap: 16rpx; /* 统一增加间距，确保所有站点间距相同 */
  min-width: max-content; /* 确保容器宽度能容纳所有内容 */
}

/* 移除最后一个导航项的特殊右边距，让gap统一控制间距 */

/* 更新时间栏 */
.update-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8rpx 30rpx;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.update-text {
  font-size: 22rpx;
  color: #8e8e93;
  font-weight: 500;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
  color: #666;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 推荐内容 */
.recommended-section {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.collapse-btn {
  padding: 10rpx 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.recommended-sites {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.site-section {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.site-section.collapsed .site-content {
  display: none;
}

.site-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.site-info {
  display: flex;
  align-items: center;
}

.site-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.site-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.collapse-icon {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s;
}

.collapse-icon.collapsed {
  transform: rotate(-90deg);
}

.site-content {
  padding: 0 30rpx 20rpx;
}

.hot-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.hot-item:last-child {
  border-bottom: none;
}

.item-rank {
  width: 40rpx;
  height: 40rpx;
  background: #1890ff;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-height: 3em;
}

.item-hot {
  font-size: 22rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 单个站点内容 */
.site-content-section {
  padding: 20rpx;
}

.site-header-large {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.site-icon-large {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.site-name-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.hot-items-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.hot-item-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.item-rank-large {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #1890ff 0%, #722ed1 100%);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-content-large {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-title-large {
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-height: 3em;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.item-hot-large {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-time {
  font-size: 22rpx;
  color: #999;
}

/* 无数据提示 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
  color: #999;
}

.no-data-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-data-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #1890ff;
  color: white;
  border-radius: 20rpx;
  font-size: 28rpx;
}

/* 导航栏美化动画效果 */
@keyframes navFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-1rpx);
  }
}

/* 为导航栏添加微妙的浮动效果 */
.nav-bar {
  animation: navFloat 6s ease-in-out infinite;
}

/* 站点点击效果 */
.nav-item:active {
  transform: translateY(-2rpx) scale(0.98);
}

.nav-item:active::before {
  opacity: 0.6;
}

/* 三横按钮点击效果 */
.nav-sort-btn:active .sort-icon-container {
  transform: scale(0.95) translateY(-1rpx);
  box-shadow: 0 3rpx 8rpx rgba(255, 107, 107, 0.2), inset 0 1rpx 2rpx rgba(255, 255, 255, 0.4);
}

/* 导航栏毛玻璃效果增强 */
.nav-bar {
  -webkit-backdrop-filter: blur(20rpx);
}