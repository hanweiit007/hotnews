.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.error-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.error-message {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.error-tips {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  width: 100%;
}

.error-tips text {
  color: #666;
  font-size: 24rpx;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
  justify-content: center;
}

.retry-btn, .copy-btn {
  flex: 1;
  max-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.retry-btn {
  background-color: #1890ff;
  color: white;
  border: none;
}

.copy-btn {
  background-color: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

/* 文章内容样式 */
.article-container {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.article-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 20rpx;
}

.article-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  background-color: #f0f0f0;
  color: #666;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* Webview模式样式 */
.webview-container {
  height: 100vh;
  width: 100%;
  position: relative;
}

.mode-indicator {
  background: #1890ff;
  color: white;
  text-align: center;
  padding: 8rpx 0;
  font-size: 24rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  height: 60rpx;
  line-height: 44rpx;
}

.mode-text {
  font-weight: bold;
}

.webview {
  position: absolute;
  top: 140rpx;  /* 为调试按钮留出更多空间 */
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: calc(100vh - 140rpx);
}

/* 代理内容模态框样式 */
.proxy-content-modal {
  position: fixed;
  top: 60rpx;  /* 为模式指示器留出空间 */
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  z-index: 2000;
  display: flex;
  flex-direction: column;
}

.proxy-content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #1890ff;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;  /* 防止头部被压缩 */
}

.proxy-content-body {
  flex: 1;
  width: 100%;
  height: 100%;
  overflow-y: auto;
}

.proxy-content-body .rich-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 平台跳转按钮样式 */
.platform-jump {
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.platform-info-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.platform-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.platform-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.platform-desc {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.jump-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.jump-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.article-content {
  padding: 30rpx;
  line-height: 1.6;
}

.rich-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

/* rich-text内部样式 */
.rich-text /deep/ p {
  margin: 20rpx 0;
}

.rich-text /deep/ img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.rich-text /deep/ h1,
.rich-text /deep/ h2,
.rich-text /deep/ h3,
.rich-text /deep/ h4 {
  margin: 30rpx 0 20rpx 0;
  color: #333;
  font-weight: bold;
}

.rich-text /deep/ h1 {
  font-size: 36rpx;
}

.rich-text /deep/ h2 {
  font-size: 32rpx;
}

.rich-text /deep/ h3 {
  font-size: 28rpx;
}

.rich-text /deep/ h4 {
  font-size: 26rpx;
}

.rich-text /deep/ blockquote {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-left: 8rpx solid #1890ff;
  border-radius: 4rpx;
}

.rich-text /deep/ code {
  background-color: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'Courier New', monospace;
}

.rich-text /deep/ pre {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin: 20rpx 0;
}

/* 新增：降级内容样式 */
.rich-text /deep/ .fallback-content {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.rich-text /deep/ .content-notice {
  background: #e3f2fd;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #1890ff;
}

.rich-text /deep/ .content-summary {
  background: #fff3cd;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #ffc107;
}

.rich-text /deep/ .access-options {
  background: #d4edda;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #28a745;
}

.rich-text /deep/ .platform-info {
  background: #f8d7da;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #dc3545;
}

.rich-text /deep/ .access-options ul {
  margin: 10rpx 0;
  padding-left: 20rpx;
}

.rich-text /deep/ .access-options li {
  margin: 8rpx 0;
  line-height: 1.6;
}

.rich-text /deep/ a {
  color: #1890ff;
  text-decoration: underline;
}

.article-footer {
  padding: 20rpx 30rpx;
  background-color: #f9f9f9;
  text-align: center;
}

.footer-text {
  color: #999;
  font-size: 24rpx;
}
