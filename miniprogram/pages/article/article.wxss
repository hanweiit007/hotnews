/* 通用容器样式 */
.container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  color: rgba(255,255,255,0.9);
  font-size: 28rpx;
  font-weight: 500;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.error-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.error-tips {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 50rpx;
  padding: 30rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.error-tips text {
  font-size: 26rpx;
  color: #555555;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.error-actions {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.retry-btn, .copy-btn {
  flex: 1;
  padding: 28rpx 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.copy-btn {
  background: #ffffff;
  color: #333333;
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

/* 模式指示器通用样式 */
.mode-indicator {
  color: white;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  height: 60rpx;
  line-height: 36rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

/* 不同模式的指示器颜色 */
.rich-text-mode {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333333;
}

.proxy-mode {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #333333;
}

.direct-mode {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333333;
}

.mode-text {
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
}

/* ==================== 富文本模式样式 ==================== */
.rich-text-container {
  padding-top: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
}

.rich-text-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 20%, rgba(255,255,255,0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(255,255,255,0.08) 0%, transparent 50%);
  pointer-events: none;
}

.article-header {
  padding: 50rpx 30rpx 40rpx;
  background: rgba(255,255,255,0.95);
  margin: 20rpx 20rpx 0;
  border-radius: 28rpx 28rpx 0 0;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
  position: relative;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
}

.article-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #667eea 100%);
  border-radius: 28rpx 28rpx 0 0;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.article-title {
  font-size: 42rpx;
  font-weight: 800;
  color: #2c3e50;
  line-height: 1.3;
  display: block;
  margin-bottom: 30rpx;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
  position: relative;
  padding-bottom: 20rpx;
}

.article-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
  animation: expandWidth 2s ease-out;
}

@keyframes expandWidth {
  0% { width: 0; }
  100% { width: 80rpx; }
}

.article-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.action-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 26rpx;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  border: none;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.action-btn:active::before {
  left: 100%;
}

.platform-jump {
  margin: 0 20rpx 20rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 28rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.15);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(255,255,255,0.3);
}

.platform-jump::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255,255,255,0.15) 0%, transparent 100%);
  pointer-events: none;
}

.platform-jump::after {
  content: '';
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.6; }
  50% { transform: scale(1.2); opacity: 0.3; }
}

.platform-info-bar {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.platform-icon {
  font-size: 42rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 3rpx 6rpx rgba(0,0,0,0.3));
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-6rpx); }
}

.platform-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #2c3e50;
  margin-right: 20rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
}

.platform-desc {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 600;
  opacity: 0.9;
}

.jump-btn {
  width: 100%;
  color: white;
  font-size: 32rpx;
  font-weight: 800;
  padding: 32rpx;
  border-radius: 20rpx;
  border: none;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.5);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
  position: relative;
  overflow: hidden;
}

.jump-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.6s ease;
}

.jump-btn:active::before {
  left: 100%;
}

.jump-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.article-content {
  padding: 0;
  background: rgba(255,255,255,0.98);
  margin: 0 20rpx 20rpx;
  border-radius: 0 0 28rpx 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
}

.article-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.3), transparent);
}

.rich-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #2c3e50;
  padding: 50rpx 35rpx;
  letter-spacing: 0.8rpx;
  text-align: justify;
  word-break: break-word;
  position: relative;
}

.rich-text::first-letter {
  font-size: 48rpx;
  font-weight: 800;
  color: #667eea;
  float: left;
  margin: 8rpx 12rpx 0 0;
  line-height: 1;
}

.no-content {
  text-align: center;
  color: #bdc3c7;
  padding: 100rpx 0;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.article-footer {
  padding: 40rpx 30rpx;
  text-align: center;
  background: rgba(255,255,255,0.9);
  margin: 0 20rpx 40rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
}

.article-footer::before {
  content: '✨';
  position: absolute;
  top: 15rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
  opacity: 0.6;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% { opacity: 0.6; transform: translateX(-50%) scale(1); }
  50% { opacity: 1; transform: translateX(-50%) scale(1.1); }
}

.footer-text {
  font-size: 26rpx;
  color: #95a5a6;
  font-weight: 600;
  margin-top: 20rpx;
  opacity: 0.9;
}

/* ==================== 代理网页模式样式 ==================== */
.proxy-webview-container {
  padding-top: 60rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, #ffecd2 0%, #fcb69f 100%);
}

/* 代理模式加载容器 */
.proxy-loading-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.loading-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
}

.loading-animation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  height: 80rpx;
}

.loading-ring {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid transparent;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1.5s linear infinite;
  margin: 0 8rpx;
}

.loading-ring:nth-child(2) {
  animation-delay: -0.5s;
  border-top-color: #764ba2;
}

.loading-ring:nth-child(3) {
  animation-delay: -1s;
  border-top-color: #ffecd2;
}

.loading-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
  display: block;
}

.loading-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 40rpx;
  display: block;
}

.loading-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  align-items: flex-start;
}

.step {
  display: flex;
  align-items: center;
  gap: 16rpx;
  opacity: 0.4;
  transition: all 0.3s ease;
}

.step-active {
  opacity: 1;
}

.step-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #bdc3c7;
  transition: all 0.3s ease;
}

.step-active .step-dot {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 0 12rpx rgba(102, 126, 234, 0.5);
}

.step text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.step-active text {
  color: #2c3e50;
  font-weight: 600;
}

.proxy-content-modal {
  position: fixed;
  top: 60rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.proxy-content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  position: relative;
}

.proxy-content-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: rgba(255,255,255,0.6);
  border-radius: 2rpx;
}

.header-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.header-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.header-subtitle {
  font-size: 22rpx;
  opacity: 0.8;
  font-weight: 500;
}

.close-btn {
  background: rgba(255,255,255,0.2) !important;
  color: white !important;
  border: 1rpx solid rgba(255,255,255,0.3) !important;
  border-radius: 50% !important;
  width: 60rpx !important;
  height: 60rpx !important;
  font-size: 28rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease !important;
  line-height: 1 !important;
  padding: 0 !important;
}

.proxy-content-body {
  flex: 1;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);
}

.content-wrapper {
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.proxy-content-body .rich-text {
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 1.8;
  padding: 40rpx 30rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  letter-spacing: 0.5rpx;
  flex: 1;
}

.content-end {
  margin: 40rpx 30rpx;
  padding: 30rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 20rpx;
  text-align: center;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.end-indicator {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 12rpx;
}

.content-info {
  font-size: 22rpx;
  color: #95a5a6;
  font-weight: 500;
}

/* 富文本模式额外样式 */
.platform-text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.platform-desc {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
  margin-top: 4rpx;
}

.no-content {
  text-align: center;
  color: #bdc3c7;
  padding: 80rpx 0;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-content-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.no-content-text {
  font-size: 28rpx;
  color: #bdc3c7;
  font-weight: 500;
}

/* ==================== 直接网页模式样式 ==================== */
.direct-webview-container {
  padding-top: 60rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, #a8edea 0%, #fed6e3 100%);
}

/* ==================== Webview通用样式 ==================== */
.webview {
  flex: 1;
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
}

/* ==================== 未知模式样式 ==================== */
.unknown-mode-container {
  padding-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

/* ==================== Rich-text深度样式优化 ==================== */
.rich-text /deep/ p {
  margin: 30rpx 0;
  line-height: 1.9;
  text-align: justify;
  color: #2c3e50;
  font-weight: 500;
  text-indent: 2em;
  transition: color 0.3s ease;
}

.rich-text /deep/ img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 40rpx auto;
  border-radius: 16rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.15);
  transition: all 0.3s ease;
  border: 3rpx solid rgba(255,255,255,0.8);
}

.rich-text /deep/ img:hover {
  transform: scale(1.02);
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.2);
}

.rich-text /deep/ h1,
.rich-text /deep/ h2,
.rich-text /deep/ h3,
.rich-text /deep/ h4 {
  margin: 50rpx 0 30rpx 0;
  color: #2c3e50;
  font-weight: 800;
  line-height: 1.3;
  position: relative;
  padding-left: 24rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.rich-text /deep/ h1::before,
.rich-text /deep/ h2::before,
.rich-text /deep/ h3::before,
.rich-text /deep/ h4::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 80%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  box-shadow: 0 0 12rpx rgba(102, 126, 234, 0.4);
  animation: glow 3s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% { box-shadow: 0 0 12rpx rgba(102, 126, 234, 0.4); }
  50% { box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.6); }
}

.rich-text /deep/ h1 {
  font-size: 48rpx;
  color: #667eea;
}

.rich-text /deep/ h2 {
  font-size: 42rpx;
  color: #764ba2;
}

.rich-text /deep/ h3 {
  font-size: 38rpx;
  color: #2c3e50;
}

.rich-text /deep/ h4 {
  font-size: 34rpx;
  color: #34495e;
}

.rich-text /deep/ blockquote {
  margin: 40rpx 0;
  padding: 30rpx 40rpx 30rpx 60rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-left: 8rpx solid #667eea;
  border-radius: 16rpx;
  position: relative;
  font-style: italic;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.rich-text /deep/ blockquote::before {
  content: '"';
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 80rpx;
  color: #667eea;
  opacity: 0.4;
  font-family: serif;
  font-weight: 700;
}

.rich-text /deep/ blockquote::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(102, 126, 234, 0.02) 0%, transparent 100%);
  pointer-events: none;
}

.rich-text /deep/ code {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 26rpx;
  font-weight: 600;
