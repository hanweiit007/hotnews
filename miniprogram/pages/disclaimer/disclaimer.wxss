.container {
  height: 100vh;
  background: linear-gradient(to bottom, #f5f7fa 0%, #c3cfe2 100%);
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  font-weight: 400;
}

/* 内容区块 */
.section {
  margin: 0 20rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.section-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.emoji {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.text {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.content {
  padding: 30rpx;
}

.paragraph {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #34495e;
  margin-bottom: 20rpx;
  text-align: justify;
}

/* 来源列表 */
.source-list {
  margin: 20rpx 0;
  padding: 24rpx;
  background: linear-gradient(135deg, #f1f3f4 0%, #e8eaed 100%);
  border-radius: 12rpx;
  border-left: 6rpx solid #667eea;
}

.source-item {
  display: block;
  font-size: 26rpx;
  color: #555555;
  margin-bottom: 8rpx;
  line-height: 1.6;
}

/* 联系方式 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 12rpx;
  margin-top: 20rpx;
  border: 1rpx solid #2196f3;
}

.contact-label {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: 600;
}

.contact-value {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: 700;
  margin-right: 16rpx;
}

.copy-hint {
  font-size: 22rpx;
  color: #666666;
  opacity: 0.8;
}

/* 底部按钮 */
.footer {
  padding: 40rpx 30rpx;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  padding: 28rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 底部说明 */
.bottom-note {
  text-align: center;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.note-text {
  display: block;
  font-size: 22rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
  opacity: 0.8;
}