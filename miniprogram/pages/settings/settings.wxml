<view class="container {{settings.theme === 'dark' ? 'dark-theme' : ''}}">
  <view class="settings-group">
    <view class="group-title">热点显示设置</view>
    
    <!-- 推荐模式热点数量设置 -->
    <view class="setting-item">
      <view class="setting-label">
        <text class="label-text">推荐模式热点数量</text>
        <text class="label-desc">每个站点显示的热点数量（1-10）</text>
      </view>
      <view class="setting-control">
        <slider 
          min="1" 
          max="10" 
          value="{{recommendedItemsPerSite}}" 
          show-value 
          activeColor="#E53E3E"
          bindchange="handleRecommendedItemsChange"
        />
      </view>
    </view>

    <!-- 站点模式热点数量设置 -->
    <view class="setting-item">
      <view class="setting-label">
        <text class="label-text">站点模式热点数量</text>
        <text class="label-desc">单个站点显示的热点数量（5-20）</text>
      </view>
      <view class="setting-control">
        <slider 
          min="5" 
          max="20" 
          value="{{siteItemsPerSite}}" 
          show-value 
          activeColor="#E53E3E"
          bindchange="handleSiteItemsChange"
        />
      </view>
    </view>
  </view>

  <view class="settings-group">
    <view class="group-title">其他设置</view>
    
    <!-- 自动刷新设置 -->
    <view class="setting-item">
      <view class="setting-label">
        <text class="label-text">自动刷新</text>
        <text class="label-desc">每5分钟自动刷新一次</text>
      </view>
      <view class="setting-control">
        <switch checked="{{autoRefresh}}" bindchange="handleAutoRefreshChange" color="#E53E3E" />
      </view>
    </view>

    <!-- 深色模式设置 -->
    <view class="setting-item">
      <view class="setting-label">
        <text class="label-text">深色模式</text>
        <text class="label-desc">跟随系统</text>
      </view>
      <view class="setting-control">
        <switch checked="{{darkMode}}" bindchange="handleDarkModeChange" color="#E53E3E" />
      </view>
    </view>
  </view>

  <view class="settings-group">
    <view class="group-title">显示设置</view>
    
    <!-- 是否显示热点摘要 -->
    <view class="setting-item">
      <view class="setting-label">显示热点摘要</view>
      <switch checked="{{settings.showSummary}}" bindchange="onShowSummaryChange" color="#3498db"/>
    </view>

    <!-- 是否显示热点时间 -->
    <view class="setting-item">
      <view class="setting-label">显示热点时间</view>
      <switch checked="{{settings.showTime}}" bindchange="onShowTimeChange" color="#3498db"/>
    </view>

    <!-- 是否显示热点热度 -->
    <view class="setting-item">
      <view class="setting-label">显示热点热度</view>
      <switch checked="{{settings.showHot}}" bindchange="onShowHotChange" color="#3498db"/>
    </view>
  </view>

  <view class="settings-group">
    <view class="group-title">主题设置</view>
    
    <!-- 主题选择 -->
    <view class="setting-item">
      <view class="setting-label">主题</view>
      <radio-group bindchange="onThemeChange">
        <label class="radio">
          <radio value="light" checked="{{settings.theme === 'light'}}"/>浅色
        </label>
        <label class="radio">
          <radio value="dark" checked="{{settings.theme === 'dark'}}"/>深色
        </label>
      </radio-group>
    </view>
  </view>

  <view class="settings-group">
    <view class="group-title">数据设置</view>
    
    <!-- 数据刷新间隔 -->
    <view class="setting-item">
      <view class="setting-label">数据刷新间隔</view>
      <picker bindchange="onRefreshIntervalChange" value="{{refreshIntervalOptions.indexOf(settings.refreshInterval)}}" range="{{refreshIntervalOptions}}">
        <view class="picker">
          {{settings.refreshInterval}}分钟
        </view>
      </picker>
    </view>
  </view>

  <!-- 重置按钮 -->
  <view class="reset-button" bindtap="resetSettings">
    恢复默认设置
  </view>

  <!-- 数据管理和关于我们优化，无需title，更简洁 -->
  <view class="section">
    <view class="setting-item" bindtap="clearCache">
      <text>清除缓存</text>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="section">
    <view class="setting-item" bindtap="showAbout">
      <text>关于我们</text>
      <text class="arrow">></text>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text>当前版本：{{version}}</text>
  </view>
</view> 