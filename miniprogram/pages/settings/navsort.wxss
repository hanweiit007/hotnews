/* 排序页面样式 */
.navsort-container {
  background: linear-gradient(180deg, #f8f9fa 0%, #f5f5f5 100%);
  min-height: 100vh;
  padding: 0;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(255, 107, 107, 0.15);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
}

.edit-actions {
  /* 现在在flexbox布局中 */
}

.edit-btn {
  background: rgba(255, 255, 255, 0.15);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 15rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.edit-btn.active {
  background: #ffffff;
  color: #ff6b6b;
  border-color: #ffffff;
}

/* 区域样式 */
.section {
  margin: 0 20rpx 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
}

.title-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 5rpx;
}

.title-count {
  font-size: 22rpx;
  color: #999;
  font-weight: normal;
}

.section-desc {
  font-size: 22rpx;
  color: #666;
}

/* 站点网格 - 九宫格布局 */
.sites-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

/* 站点卡片 */
.site-card {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 8rpx;
  padding: 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.06);
  border: 1rpx solid rgba(255, 107, 107, 0.1);
  transition: all 0.2s ease;
  aspect-ratio: 1; /* 保持正方形比例，真正的九宫格效果 */
  min-width: 0; /* 确保在小屏幕上也能正常显示三列 */
}

.site-card.editing {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.12);
  border-color: rgba(255, 107, 107, 0.2);
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 100%;
}

.site-icon {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.site-name {
  font-size: 22rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  line-height: 1.2;
  word-break: break-all; /* 确保长文字换行 */
}

.site-badge {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #ffffff;
  font-size: 16rpx;
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
  font-weight: 500;
  box-shadow: 0 1rpx 3rpx rgba(255, 107, 107, 0.2);
}

.site-badge.available {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  box-shadow: 0 1rpx 3rpx rgba(82, 196, 26, 0.2);
}

/* 操作按钮 */
.remove-btn, .add-btn {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: bold;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s ease;
  z-index: 2;
}

.remove-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(255, 77, 79, 0.25);
}

.add-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(82, 196, 26, 0.25);
}

.remove-icon, .add-icon {
  font-size: 14rpx;
}

/* 空状态 */
.empty-state {
  grid-column: 1 / -1;
  text-align: center;
  padding: 40rpx 20rpx;
  background: #ffffff;
  border-radius: 8rpx;
  border: 1rpx dashed #d9d9d9;
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.empty-text {
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 5rpx;
}

.empty-desc {
  font-size: 22rpx;
  color: #999;
}

/* 操作提示 */
.tips-section {
  margin: 30rpx 20rpx 40rpx;
}

.tips-card {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.08);
  border-left: 3rpx solid #ff6b6b;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.tips-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
  color: #ff6b6b;
}

.tips-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.tip-item {
  font-size: 22rpx;
  color: #666;
  line-height: 1.3;
}

/* 完全移除响应式适配，确保始终显示三列 */