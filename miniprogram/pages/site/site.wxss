/* pages/site/site.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 站点卡片 */
.site-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.site-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.site-icon {
  width: 88rpx;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.site-info {
  flex: 1;
}

.site-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.site-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
}

.site-actions {
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.action-icon {
  font-size: 32rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #E53E3E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 热点列表 */
.hot-items {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.items-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.header-count {
  font-size: 24rpx;
  color: #999;
}

.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hot-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-rank {
  width: 40rpx;
  height: 40rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.item-rank.top-1 {
  background: #E53E3E;
  color: #fff;
}

.item-rank.top-2 {
  background: #ED8936;
  color: #fff;
}

.item-rank.top-3 {
  background: #ECC94B;
  color: #fff;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  white-space: normal;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-hot {
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.item-time {
  color: #999;
}

.item-summary {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 无数据提示 */
.no-data {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 加载更多提示 */
.load-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #000;
  }

  .site-card,
  .hot-items,
  .hot-item {
    background: #1c1c1e;
  }

  .site-icon {
    background: #2c2c2e;
  }

  .site-name {
    color: #fff;
  }

  .stat-item {
    color: #999;
  }

  .action-btn {
    background: #2c2c2e;
    color: #999;
  }

  .items-header {
    border-bottom-color: #2c2c2e;
  }

  .header-title {
    color: #fff;
  }

  .item-title {
    color: #fff;
  }

  .item-summary {
    color: #999;
  }

  .item-rank {
    background: #2c2c2e;
    color: #999;
  }

  .item-hot {
    background: #2c2c2e;
  }
} 